package com.banners{	import flash.display.*;	import flash.events.*;	import com.greensock.*;	public class Replay extends MovieClip	{		public var icon : MovieClip;		public function Replay()		{			// constructor code			this.buttonMode = true;			this.mouseChildren = false;			addEventListener(MouseEvent.ROLL_OVER, spin);		}		private function spin(event : MouseEvent) : void		{			rotation = 0;			TweenNano.to(icon, .5, {rotation:360});		}	}}