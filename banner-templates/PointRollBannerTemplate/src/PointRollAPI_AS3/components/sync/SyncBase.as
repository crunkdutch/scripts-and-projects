/** * PointRoll Sync Host/Client *  * This class is the super for SyncClient and SyncHost *  * @class 		SyncBase * @package		PointRollAPI.components.sync * @author		PointRoll */  package PointRollAPI_AS3.components.sync {	import PointRollAPI_AS3.events.net.PrLocalConnectEvent;	import String;	import flash.display.MovieClip;	import flash.events.Event;	//PointRoll API specific class imports		//Base classes		/** @private **/
	public class SyncBase extends MovieClip {				[Inspectable(name="Connection Name", type=String, defaultValue="default")]		public var _connectionName:String;														public var _connection:*;			function SyncBase() {}			protected function init(e:Event):void {			this.visible = false;						_connection.addEventListener(PrLocalConnectEvent.SEND_SUCCESS, sendSuccess, false, 0, true);			_connection.addEventListener(PrLocalConnectEvent.SEND_FAILURE, sendFailed, false, 0, true);		}				public function sendFailed(e:PrLocalConnectEvent):void {			dispatchEvent(new PrLocalConnectEvent(PrLocalConnectEvent.SEND_FAILURE));		}			public function sendSuccess(e:PrLocalConnectEvent):void {			dispatchEvent(new PrLocalConnectEvent(PrLocalConnectEvent.SEND_SUCCESS));		}				public function send(...args):void {			_connection.send(args[0], args.slice(-1*(args.length-1)));		}	}	}